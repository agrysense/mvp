<schema>
	<aclGroups>
		<aclGroup name='user'>
			<read>user</read>
			<write>user</write>
			<fields>
				<field>farm</field> <!-- id to the farm it belongs to -->
				<field>name</field>
				<field>id</field>
				<field>location</field>
				<field>gps</field>
			</fields>
		</aclGroup>
		<schemaAcl>
			<read>nobody</read>
			<write>nobody</write>
			<delete>nobody</delete>
		</schemaAcl>
	</aclGroups>
	<fields>
		<field name='id' type='string'>
			<validation>
				<cardinality min='1' max='1'/>
			</validation>
		</field>
		<field name='farm' type='string'>
			<validation>
				<cardinality min='1' max='1'/>
			</validation>
		</field>
		<field name='name' type='string'>
			<validation>
				<cardinality min='0' max='1'/>
			</validation>
		</field>
		<field name='location' type='string'>
			<validation>
				<cardinality min='1' max='1'/>
			</validation>
		</field>
		<field name='gps' type='geospatial'>
			<validation>
				<cardinality min='1' max='1'/>
			</validation>
		</field>
	</fields>
</schema>
